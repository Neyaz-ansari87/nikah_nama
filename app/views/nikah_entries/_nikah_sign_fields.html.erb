<div class="nested-fields">
  <div class="row">
    <div class="col">
      <%= f.label :sign_label, class: "mt-3" %>
      <%= f.text_field :sign_label, placeholder: "Enter Your Flat/House Number", class: "mb-3 form-control" %>
    </div>
    <div class="col">
      <%= f.label :sign_image, class: "mt-3" %>
      <%= f.file_field :sign_image, placeholder: "Enter Your Society Name", class: "mb-3 form-control" %>
    </div>
  </div>
  <%= link_to_remove_association "Delete", f, class:"btn btn-danger mb-2" %>
</div>